# Colab API Configuration
COLAB_API_URL=http://localhost:8000

# Whisper Model Size
# Options: tiny, base, small, medium, large
# Larger models are more accurate but slower
WHISPER_MODEL=base

# Processing Settings
FRAME_EXTRACTION_RATE=30
OCR_CONFIDENCE_THRESHOLD=0.5
MAX_VIDEO_SIZE_MB=500

# Database
# Leave as default for SQLite
DATABASE_URL=sqlite:///database/lectures.db

# LLM Settings
API_TIMEOUT=300
MAX_PROMPT_LENGTH=2000
CHUNK_SIZE=1000
